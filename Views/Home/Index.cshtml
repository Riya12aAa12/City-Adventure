@model MovieStoreMvc.Models.DTO.MovieListVm
@{
    Layout = "_Layout";
}
<section class="video-slider">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <video autoplay muted loop>
                    <source src="~/Uploads/1826904-hd_1920_1080_24fps.mp4" type="video/mp4">
                </video>
                <div class="slider-text">
                    <h2 class="slider-heading">Discover something new</h2>
                    <p class="slider-description">Unleash your imagination</p>
                </div>
            </div>
            <div class="swiper-slide">
                <video autoplay muted loop>
                    <source src="~/Uploads/4982411-hd_1920_1080_25fps.mp4" type="video/mp4">
                </video>
                <div class="slider-text">
                    <h2 class="slider-heading">Journey into Imagination</h2>
                    <p class="slider-description">Discover stories waiting to be told</p>
                </div>

            </div>
            <div class="swiper-slide">
                <video autoplay muted loop>
                    <source src="~/Uploads/5111183-hd_1920_1080_25fps.mp4" type="video/mp4">
                </video>
                <div class="slider-text">
                    <h2 class="slider-heading">Explore Endless Possibilities</h2>
                    <p class="slider-description">Where every moment is an adventure</p>
                </div>

            </div>
            <div class="swiper-slide">
                <video autoplay muted loop>
                    <source src="~/Uploads/1730395-hd_1920_1080_25fps.mp4" type="video/mp4">
                </video>
                <div class="slider-text">
                    <h2 class="slider-heading">Experience the Magic</h2>
                    <p class="slider-description">Unlock new worlds and adventures</p>
                </div>

            </div>
            <!-- Add more slides for other videos -->
        </div>
        <div class="swiper-pagination"></div>
        <div class="icons-container">
        <div class="icons">
            <i class="fa fa-play"></i>
            <i class="fa fa-plus"></i>
            <i class="fa fa-clock-o"></i>
            <i class="fa fa-list"></i><!-- Example of using Font Awesome play icon -->
            <!-- Add more icons here -->
        </div>
        </div>
    </div>
    
</section>



<section class="search-bar">
    <form method="get" asp-action="Index">
        <input type="text" name="term" placeholder="search here">
        <button type="submit"><i class="fa fa-search"></i></button>
        <a class="btn btn-default" href="/Home/Index">All</a>
    </form>
</section>

<section class="movies">

    @foreach (var movie in Model.MovieList)
    {
        <div class="movie-card" onclick="window.location.href='/Home/MovieDetail?movieId=@movie.Id'">
            <div class="movie-image">
                <img src="/Uploads/@movie.MovieImage">
            </div>
            <div class="movie-info">
                <h4>@movie.Title</h4>
                <h4>@movie.GenreNames</h4>
                <h4>@movie.ReleaseYear</h4>
                <h4>Cast : @movie.Cast</h4>
                <h4>Director : @movie.Director</h4>
            </div>
        </div>
    }
</section>
<div class="pagination">
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.CurrentPage)
        {
            <a href="/Home/Index?currentPage=@i&term=@Model.Term" class="active">@i</a>
        }
        else
        {
            <a href="/Home/Index?currentPage=@i&term=@Model.Term">@i</a>

        }
    }

</div>